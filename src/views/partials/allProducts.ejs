<article class="profileCartConatiner flx-c-nw" >
    
    <section class="centerProfileCartConatiner flx-c-nw" action="/mercadopago/create-Order" method="post">
         
        <div class="titleSection flx-r-nw">
            <h2>Todos los Productos</h2>
            <div class="main-search-bar flx-r-w" id="searchProduct">
                <label class="search-label profileSearchLabel flx-r-w" for="search-btn">
                  <input
                    type="text"
                    name="keywords"
                    id="search-btn"
                    class="profileSearchInput"
                    placeholder="Busqueda de Productos"
                  />
                </label>
            </div>
            <button type="button" class="navBtn" onclick="newProduct(event)">Nuevo Producto</button>
        </div>
  
        <div class="profileCartProducts flx-r-w">

            <% if (locals.allProducts) { %>

                <% locals.allProducts.forEach(product => {  %>

                    <article class="profileCartDataConatiner flx-r-nw"  onclick="dashboardProductController(event)">
                        <input type="hidden" name="productId" id="productId" value="<%= product.productId %>" >

                        <div class="leftProfileCartBorder"></div>

                        <div class="profileCart-img-container flx-r-nw">
                            <img src="/img/Products-Image<%= product.images[0].imageTitle %>" alt="">
                        </div>

                        <p class="favoriteProductName"><%= product.productName %></p>

                        <div class="profileCart-quantity-container flx-r-w">
                            <input type="number" class="profileCart-quantity-input"  value="<%= product.stock %>" disabled>
                        </div>

                        <% if (product.discount) { %>
                            <i class="profileCart-discount-text flx-r-nw">
                                %<%= product.discount %> OFF
                            </i>
                        <% } else{ %>
                            <i class="profileCart-discount-text"></i>
                        <% } %>

                        <p class="profileCart-product-subtotal"><%= product.productPrice.toFixed(2) %></p>

                        <i class="fa-solid fa-trash flx-r-nw profileCart-delete-product"></i>
                    </article>

                <% }) %>

            <% } %>
    
        </div>
    </section>

</article>
