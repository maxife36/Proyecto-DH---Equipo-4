<link rel="stylesheet" href="/css/allUsers.css">

<article class="userDataConatiner flx-c-nw">
    
    <section class="centerConatiner flx-c-nw" id="userDetailCenterConatiner">
        <div class="flx-r-nw" id="returnToAllUsers">
            <button type="button" class="navBtn" onclick="returnToAllUsers(event)">Volver</button>
        </div>
        
        <div class="profile-img-section flx-c-w" >
          <div class="profile-img-container" id="profileImgUserDetail">
            <% if (userInfo.profileImg) { %>
              <img src="/img/usersImg<%= userInfo.profileImg %>">
              <% }else{ %>
              <img src="/img/user-img.svg">
            <% } %>
          </div>
        </div>
        <div class="inputsConatiner flx-c-nw">
            <div class="dataConatiner flx-r-nw">
                <label for="userEmail" class="flx-r-nw">Email</label>
                <input type="text" name="userEmail" id="userEmail" value="<%= userInfo.email %>" required disabled>
            </div>
            <div class="dataConatiner flx-r-nw">
                <label for="userName" class="flx-r-nw">Nombre de Usuario</label>
                <input type="text" name="userName" id="userName" value="<%= userInfo.username %>" required disabled>
            </div>
            <div class="dataConatiner flx-r-nw">
                <label for="fullName" class="flx-r-nw">Nombre Completo</label>
                <input type="text" name="fullName" id="fullName" value="<%= userInfo.fullname %>" required disabled>
            </div>
            <div class="dataConatiner flx-r-nw">
                <label for="userBirthday" class="flx-r-nw">Fecha de Nacimiento</label>
                <input type="date" name="userBirthday" id="userBirthday" value="<%= userInfo.formatedBirthday %>" required disabled>
            </div>
            <div class="dataConatiner flx-r-nw">
                <label for="userAdress" class="flx-r-nw">Domicilio</label>
                <input type="text" name="userAdress" id="userAdress" value="<%= userInfo.address %>" disabled>
            </div>
        </div>

    </section>

</article>

<script src="/DOM-Controllers/userData"></script>
