<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/productEdit.css">
</head>

<body class="flx-r-w">
    <section class="entry-options flx-r-w">
        <button id="btn-exit-entry">
            <i class="fa-solid fa-x"></i>
        </button>
        
        <a href="/register" class="flx-r-w">
            <button id="btn-register">Registrate Ahora</button>
        </a>
        <a class="main-logo-container entry-logo flx-r-w" href="/">
            <img src="/img/logo-horizontal-blanco.png" alt="">
        </a>
        <a href="/login" class="flx-r-w">
            <button id="btn-login">¿Ya tenés Cuenta?</button>
        </a>
    </section>
    <%- include('./partials/header.ejs') %>
    
<main>
    <div class="edit-container"> 
    
    <section class="title">
        <h1>Edición / Carga de productos</h1>
    </section>

    <!-- Formulario Producto -->
    <form action="register-product" method="post">
        <section class = "product-name">
            <h2>Nombre del producto:</h2>
            <input type="text" placeholder="Ingrese el nombre">
            <button>Previsualizar</button>
        </section>
           <div class="description-img">
             <section class="product-description">
                <h2>Descripción</h2>
                <textarea name="description" id="" cols="30" rows="10"></textarea>
            </section>
            <section class="product-img">
                <h2>Imágenes del producto</h2>
                <input type="file" multiple id="add-img" name="productImg" accept=".jpg, .jpeg, .png" >
               
            </section>
            </div>
        <section class="product-price">
            <h2>Precio</h2>
            <input type="text">
        </section>
        <section class="product-amount">
            <h2>Cantidad</h2>
            <input type="text">
        </section>
        <section class="product-characteristics">
            <h2>Cracteristicas</h2>
            <article>
                <label>Tipo de caracteristica</label>
                <select>
                    <option value="opcion1">Opción 1</option>
                    <option value="opcion2">Opción 2</option>
                    <option value="opcion3">Opción 3</option>
                </select>
                <ul>
                    <li><input type="text" placeholder="Descripcion 1" class="li-characteristics"></li>
                    <li><input type="text" placeholder="Descripcion 2" class="li-characteristics"></li>
                    <li><input type="text" placeholder="Descripcion 3" class="li-characteristics"></li>
                    <li><input type="text" placeholder="Descripcion 4" class="li-characteristics"></li>
                </ul>
            </article>
            <article>
                <label>Tipo de caracteristica</label>
                <select>
                    <option value="opcion1">Opción 1</option>
                    <option value="opcion2">Opción 2</option>
                    <option value="opcion3">Opción 3</option>
                </select>
                <ul>
                    <li><input type="text" placeholder="Descripcion 1" class="li-characteristics"></li>
                    <li><input type="text" placeholder="Descripcion 2" class="li-characteristics"></li>
                    <li><input type="text" placeholder="Descripcion 3" class="li-characteristics"></li>
                    <li><input type="text" placeholder="Descripcion 4" class="li-characteristics"></li>
                </ul>
            </article>
            <article>
                <label>Tipo de caracteristica</label>
                <select>
                    <option value="opcion1">Opción 1</option>
                    <option value="opcion2">Opción 2</option>
                    <option value="opcion3">Opción 3</option>
                </select>
                <ul>
                    <li><input type="text" placeholder="Descripcion 1" class="li-characteristics"></li>
                    <li><input type="text" placeholder="Descripcion 2" class="li-characteristics"></li>
                    <li><input type="text" placeholder="Descripcion 3" class="li-characteristics"></li>
                    <li><input type="text" placeholder="Descripcion 4" class="li-characteristics"></li>
                </ul>
            </article>
        </section>
        <section class="send-button">
            <button  type="submit">Crear producto</button>
        </section>
    </form>
</div>

</main>



    <!-- Scripts JS -->
    <script src="/darkmode-controller"></script>
    <script src="/submenu-controller"></script> 
    
    <%- include('./partials/footer.ejs') %>
</body>
</html>