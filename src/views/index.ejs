<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
</head>

<body>

    <%- include('./partials/userOptions.ejs') %>

    <%- include('./partials/header.ejs') %>

    <main class="main-section">
        <section class="cards">
            <% productsDb.forEach(product => { %>
                <article class="tarjeta-articulo">
                    <div class="imagen-producto">
                        <img src="/img/Products-Image/<%= product.image %>" alt=<%= product.alt %>>
                    </div>
                    <a href="/products/detail">
                        <div class="info-producto">
                            <p class="titulo-producto">
                                <%= product.name %>
                            </p>
                            <p class="descripcion-producto">
                                <%= product.shortDescription %>
                            </p>
                            <p class="precio-producto">
                                <%= product.price%>
                            </p>
                        </div>
                    </a>
                    <i class="cart-icon fa-solid fa-cart-shopping flx-r-w"></i>
                    <i class="heart-icon fa-solid fa-heart flx-r-w"></i>
                </article>           
            <% }) %>

        </section>
        <section class="carrusel">
            <img class="carrusel-img" src="/img/Imagenes-Index/banner-00.png" alt="">
            <i class="previous-icon-banner fa-solid fa-caret-left flx-r-w"></i>
            <i class="next-icon-banner fa-solid fa-caret-right flx-r-w"></i>
        </section>

        <%- include('./partials/sideCart.ejs') %>


    </main>

    <%- include('./partials/footer.ejs') %>
   

    <!-- Scripts JS -->
    <script src="/DOM-Controllers/darkmode"></script>
    <script src="/DOM-Controllers/subMenues"></script>
    <script src="/DOM-Controllers/sideCart"></script>
</body>

</html>